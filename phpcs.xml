<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <!-- Directories to scan -->
    <file>src</file>
    <file>tests</file>

    <!-- Ignore the bootstrap file for tests -->
    <exclude-pattern>tests/bootstrap.php</exclude-pattern>

    <!-- PSR-2 Coding Style -->
    <rule ref="PSR2" />

    <!-- PSR-12 Extended Coding Style -->
    <rule ref="PSR12" />
</ruleset>
